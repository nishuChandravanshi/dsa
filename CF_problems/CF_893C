#include <bits/stdc++.h>
using namespace std;
int dfs(int x, vector<int> g[], bool vis[], int c[])
{
    vis[x]=true;
    int ret=c[x];
    for(int i=0 ; i<g[x].size() ; i++)
    {
        if(!vis[g[x][i]])
        ret=min(ret,dfs(g[x][i],g,vis,c));
    }
    return ret;
}
int main() 
{
	int n,e,x,y;
	cin>>n>>e;
	int c[n+1];
	for(int i=1 ; i<=n ; i++)
	cin>>c[i];
	vector<int> v;
	vector<int> g[n+1];
	for(int i=0 ; i<e ; i++)
	{
	    cin>>x>>y;
	    g[x].push_back(y);
	    g[y].push_back(x);
	}
	bool vis[n+1];
	
	memset(vis,false,sizeof vis);
	int ans=0;
	for(int i=1 ; i<=n ; i++)
	{
	    if(!vis[i])
	    ans+=dfs(i,g,vis,c);
	}
	cout<<ans<<endl;
	return 0;
}
